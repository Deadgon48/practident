<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro - PracticDent</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #3498db;
            --primary-dark: #2980b9;
            --error-color: #e74c3c;
            --success-color: #2ecc71;
            --background-color: #f5f5f5;
            --text-color: #2c3e50;
            --border-color: #ddd;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: var(--background-color);
            min-height: 100vh;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            width: 80px;
            height: 80px;
            margin: 0 auto 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--primary-color);
            border-radius: 50%;
            color: white;
            font-size: 40px;
            font-weight: bold;
            transition: transform 0.3s ease;
        }

        .logo:hover {
            transform: scale(1.05);
        }

        .brand {
            color: var(--primary-color);
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .divider {
            height: 2px;
            background: linear-gradient(to right, var(--primary-color), var(--primary-dark));
            margin: 15px 0;
            border-radius: 2px;
        }

        .form-content {
            margin-top: 30px;
        }

        .section-title {
            font-size: 1.2rem;
            color: var(--primary-color);
            margin: 25px 0 15px;
            padding-bottom: 8px;
            border-bottom: 2px solid var(--primary-color);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: var(--text-color);
            font-weight: 500;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

        .help-text {
            font-size: 12px;
            color: #666;
            margin-top: 4px;
        }

        .error-message {
            color: var(--error-color);
            font-size: 14px;
            margin-top: 8px;
            padding: 8px;
            background-color: rgba(231, 76, 60, 0.1);
            border-radius: 4px;
            display: none;
        }

        .success-message {
            color: var(--success-color);
            background-color: rgba(46, 204, 113, 0.1);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            text-align: center;
            display: none;
        }

        .button-container {
    display: flex;
    justify-content: space-between; /* Asegura que los botones estén separados equitativamente */
    gap: 20px; /* Espacio entre botones */
    margin-top: 30px;
}

.button {
    flex: 1; /* Ambos botones ocuparán el mismo ancho */
    padding: 14px 0; /* Ajusta el tamaño vertical */
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    text-decoration: none;
    color: white;
}

.button-primary {
    background-color: var(--primary-color);
}

.button-primary:hover {
    background-color: var(--primary-dark);
}

.button-secondary {
    background-color: #95a5a6;
}

.button-secondary:hover {
    background-color: #7f8c8d;
}

        .role-fields {
            display: none;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            margin-top: 20px;
            animation: fadeIn 0.3s ease-in-out;
        }

        .role-fields.visible {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .loading {
            position: relative;
            pointer-events: none;
        }

        .loading::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            top: 50%;
            left: 50%;
            margin: -10px 0 0 -10px;
            border: 3px solid rgba(255,255,255,0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Media queries para responsividad */
        @media (max-width: 768px) {
            .container {
                padding: 20px;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }

            .button {
                padding: 12px 24px;
            }

            .section-title {
                font-size: 1.1rem;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 10px;
            }

            .container {
                padding: 15px;
            }

            .logo {
                width: 60px;
                height: 60px;
                font-size: 30px;
            }

            .brand {
                font-size: 24px;
            }

            .button {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <div class="logo">PD</div>
            <div class="brand">PracticDent</div>
            <div class="divider"></div>
            <h1>Registro de Usuario</h1>
        </div>

        <div id="mainError" class="error-message"></div>
        <div id="successMessage" class="success-message"></div>

        <form id="registrationForm" method="POST" class="form-content">
            <!-- Información Personal -->
            <div class="section-title">
                <i class="fas fa-user"></i>
                <span>Información Personal</span>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" required>
                    <div class="help-text">Solo letras y espacios</div>
                    <div class="error-message"></div>
                </div>

                <div class="form-group">
                    <label for="apellido">Apellido:</label>
                    <input type="text" id="apellido" name="apellido" required>
                    <div class="help-text">Solo letras y espacios</div>
                    <div class="error-message"></div>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label for="email">Correo Electrónico:</label>
                    <input type="email" id="email" name="email" required>
                    <div class="error-message"></div>
                </div>

                <div class="form-group">
                    <label for="telefono">Teléfono:</label>
                    <input type="tel" id="telefono" name="telefono" required
                           pattern="[0-9]{10}">
                    <div class="help-text">10 dígitos sin espacios ni guiones</div>
                    <div class="error-message"></div>
                </div>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label for="fecha_nacimiento">Fecha de Nacimiento:</label>
                    <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required>
                    <div class="error-message"></div>
                </div>

                <div class="form-group">
                    <label for="sexo">Sexo:</label>
                    <select id="sexo" name="sexo" required>
                        <option value="">Seleccione</option>
                        <option value="M">Masculino</option>
                        <option value="F">Femenino</option>
                        <option value="O">Otro</option>
                    </select>
                    <div class="error-message"></div>
                </div>
            </div>

            <!-- Información de Cuenta -->
            <div class="section-title">
                <i class="fas fa-lock"></i>
                <span>Información de Cuenta</span>
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label for="usuario">Usuario:</label>
                    <input type="text" id="usuario" name="usuario" required>
                    <div class="help-text">4-20 caracteres, letras y números</div>
                    <div class="error-message"></div>
                </div>

                <div class="form-group">
                    <label for="contrasena">Contraseña:</label>
                    <input type="password" id="contrasena" name="contrasena" required>
                    <div class="help-text">Mínimo 8 caracteres</div>
                    <div class="error-message"></div>
                </div>
            </div>

            <!-- Selección de Rol -->
            <div class="section-title">
                <i class="fas fa-user-tag"></i>
                <span>Tipo de Usuario</span>
            </div>

            <div class="form-group">
                <select id="rol_id" name="rol_id" required>
                    <option value="">Seleccione tipo de usuario</option>
                    <option value="1">Maestro</option>
                    <option value="2">Practicante</option>
                    <option value="3">Paciente</option>
                </select>
                <div class="error-message"></div>
            </div>

            <!-- Campos específicos por rol -->
            <div id="maestroFields" class="role-fields">
                <div class="section-title">
                    <i class="fas fa-user-md"></i>
                    <span>Información de Maestro</span>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="cedula_profesional">Cédula Profesional:</label>
                        <input type="text" id="cedula_profesional" name="cedula_profesional">
                        <div class="help-text">7-8 dígitos</div>
                        <div class="error-message"></div>
                    </div>

                    <div class="form-group">
                        <label for="especialidad_id">Especialidad:</label>
                        <select id="especialidad_id" name="especialidad_id">
                            <option value="">Seleccione especialidad</option>
                            <% if (especialidades && especialidades.length > 0) { %>
                                <% especialidades.forEach(function(esp) { %>
                                    <option value="<%= esp.id %>"><%= esp.nombre %></option>
                                <% }); %>
                            <% } %>
                        </select>
                        <div class="error-message"></div>
                    </div>
                </div>
            </div>

            <div id="practicanteFields" class="role-fields">
                <div class="section-title">
                    <i class="fas fa-user-graduate"></i>
                    <span>Información de Practicante</span>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="matricula">Matrícula:</label>
                        <input type="text" id="matricula" name="matricula">
                        <div class="help-text">Formato: AXXXXXXXX</div>
                        <div class="error-message"></div>
                    </div>

                    <div class="form-group">
                        <label for="semestre_actual">Semestre:</label>
                        <select id="semestre_actual" name="semestre_actual">
                            <option value="">Seleccione semestre</option>
                            <% for(let i = 1; i <= 12; i++) { %>
                                <option value="<%= i %>">Semestre <%= i %></option>
                            <% } %>
                        </select>
                        <div class="error-message"></div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="grupo_id">Grupo:</label>
                    <select id="grupo_id" name="grupo_id">
                        <option value="">Seleccione grupo</option>
                        <% if (grupos && grupos.length > 0) { %>
                            <% grupos.forEach(function(grupo) { %>
                                <option value="<%= grupo.id %>"><%= grupo.nombre %></option>
                            <% }); %>
                        <% } %>
                    </select>
                    <div class="help-text">Seleccione el grupo al que pertenece</div>
                    <div class="error-message"></div>
                </div>
            </div>
            <div id="pacienteFields" class="role-fields">
                <div class="section-title">
                    <i class="fas fa-user-injured"></i>
                    <span>Información Médica</span>
                </div>
                <div class="form-grid">
                    <div class="form-group">
                        <label for="tipo_sangre">Tipo de Sangre:</label>
                        <select id="tipo_sangre" name="tipo_sangre">
                            <option value="">Seleccione tipo de sangre</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="alergias">Alergias:</label>
                        <textarea id="alergias" name="alergias" 
                                 placeholder="Ingrese sus alergias (si tiene)"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label for="enfermedades_cronicas">Enfermedades Crónicas:</label>
                    <textarea id="enfermedades_cronicas" name="enfermedades_cronicas"
                              placeholder="Ingrese enfermedades crónicas (si tiene)"></textarea>
                </div>
                
                <div class="form-grid">
                    <div class="form-group">
                        <label for="contacto_emergencia">Contacto de Emergencia:</label>
                        <input type="text" id="contacto_emergencia" name="contacto_emergencia"
                               placeholder="Nombre del contacto">
                    </div>

                    <div class="form-group">
                        <label for="telefono_emergencia">Teléfono de Emergencia:</label>
                        <input type="tel" id="telefono_emergencia" name="telefono_emergencia"
                               pattern="[0-9]{10}"
                               placeholder="10 dígitos">
                        <div class="help-text">10 dígitos sin espacios ni guiones</div>
                    </div>
                </div>
            </div>

            <div class="button-container">
                <button type="submit" id="submitBtn" class="button button-primary">
                    <i class="fas fa-user-plus"></i> Completar Registro
                </button>
                <a href="/" class="button button-secondary">
                    <i class="fas fa-arrow-left"></i> Volver al Inicio
                </a>
            </div>
        </form>
    </div>

    <script>
        // Variables globales
        let formInitialized = false;
        
        document.addEventListener('DOMContentLoaded', function() {
    // Evitar inicialización múltiple
    if (window.formInitialized) return;
    window.formInitialized = true;

    // Listener para cambio de rol
    document.getElementById('rol_id').addEventListener('change', toggleRoleFields);

    // Event listener del formulario
    const form = document.getElementById('registrationForm');
    form.addEventListener('submit', handleSubmit);

    // Listeners para validación en tiempo real
    setupInputValidation();
});

        function toggleRoleFields() {
            const userType = document.getElementById('rol_id').value;
            console.log('Selected role:', userType);

            // Ocultar todos los campos de rol
            document.querySelectorAll('.role-fields').forEach(field => {
                field.classList.remove('visible');
            });

            // Mostrar campos según el rol seleccionado
            const roleMapping = {
                '1': 'maestroFields',
                '2': 'practicanteFields',
                '3': 'pacienteFields'
            };

            if (userType && roleMapping[userType]) {
                const targetFields = document.getElementById(roleMapping[userType]);
                if (targetFields) {
                    targetFields.classList.add('visible');
                    updateRequiredFields(userType);
                }
            }
        }

        function updateRequiredFields(rolId) {
            // Restablecer todos los campos como no requeridos
            document.querySelectorAll('.role-fields input, .role-fields select').forEach(field => {
                field.required = false;
            });

            // Establecer campos requeridos según el rol
            switch(rolId) {
                case '1': // Maestro
                    document.querySelector('[name="cedula_profesional"]').required = true;
                    document.querySelector('[name="especialidad_id"]').required = true;
                    break;
                case '2': // Practicante
                    document.querySelector('[name="matricula"]').required = true;
                    document.querySelector('[name="semestre_actual"]').required = true;
                    document.querySelector('[name="grupo_id"]').required = true; // Nuevo campo requerido
                    break;
                case '3': // Paciente
                    document.querySelector('[name="tipo_sangre"]').required = true;
                    document.querySelector('[name="contacto_emergencia"]').required = true;
                    document.querySelector('[name="telefono_emergencia"]').required = true;
                    break;
            }
        }

        async function handleSubmit(e) {
    e.preventDefault();
    
    if (!validateForm()) {
        return;
    }

    try {
        const formData = new FormData(this);
        const formDataObj = {};
        formData.forEach((value, key) => {
            formDataObj[key] = value;
        });

        const response = await fetch('/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formDataObj)
        });

        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }

        const data = await response.json();
        
        if (data.success) {
            showSuccessMessage('Registro exitoso. Redirigiendo...');
            setTimeout(() => {
                window.location.href = '/';
            }, 2000);
        } else {
            showError(data.error || 'Error en el registro');
        }
    } catch (error) {
        console.error('Error:', error);
        showError('Error al procesar el registro');
    }
}

        function validateForm() {
            clearErrors();
            let isValid = true;

            // Validar campos comunes
            const commonFields = [
                {id: 'nombre', label: 'Nombre'},
                {id: 'apellido', label: 'Apellido'},
                {id: 'email', label: 'Email'},
                {id: 'telefono', label: 'Teléfono'},
                {id: 'fecha_nacimiento', label: 'Fecha de nacimiento'},
                {id: 'sexo', label: 'Sexo'},
                {id: 'usuario', label: 'Usuario'},
                {id: 'contrasena', label: 'Contraseña'},
                {id: 'rol_id', label: 'Tipo de usuario'}
            ];

            commonFields.forEach(field => {
                const element = document.getElementById(field.id);
                if (!element.value.trim()) {
                    showFieldError(field.id, `El campo ${field.label} es requerido`);
                    isValid = false;
                }
            });

            // Validar formato de email
            const email = document.getElementById('email');
            if (email.value && !validateEmail(email.value)) {
                showFieldError('email', 'Email inválido');
                isValid = false;
            }

            // Validar campos específicos del rol
            const rolId = document.getElementById('rol_id').value;
            if (rolId) {
                isValid = validateRoleFields(rolId) && isValid;
            }

            return isValid;
        }

        function validateRoleFields(rolId) {
            let isValid = true;

            switch(rolId) {
                case '1': // Maestro
                    const cedula = document.querySelector('[name="cedula_profesional"]');
                    const especialidad = document.querySelector('[name="especialidad_id"]');
                    
                    if (!cedula.value) {
                        showFieldError('cedula_profesional', 'La cédula profesional es requerida');
                        isValid = false;
                    }
                    if (!especialidad.value) {
                        showFieldError('especialidad_id', 'La especialidad es requerida');
                        isValid = false;
                    }
                    break;

                case '2': // Practicante
                const matricula = document.querySelector('[name="matricula"]');
            const semestre = document.querySelector('[name="semestre_actual"]');
            const grupo = document.querySelector('[name="grupo_id"]');
            
            if (!matricula.value) {
                showFieldError('matricula', 'La matrícula es requerida');
                isValid = false;
            }
            if (!semestre.value) {
                showFieldError('semestre_actual', 'El semestre es requerido');
                isValid = false;
            }
            if (!grupo.value) {
                showFieldError('grupo_id', 'El grupo es requerido');
                isValid = false;
            }
                    break;

                case '3': // Paciente
                    const fields = ['tipo_sangre', 'contacto_emergencia', 'telefono_emergencia'];
                    const labels = ['tipo de sangre', 'contacto de emergencia', 'teléfono de emergencia'];
                    
                    fields.forEach((field, index) => {
                        const element = document.querySelector(`[name="${field}"]`);
                        if (!element.value) {
                            showFieldError(field, `El ${labels[index]} es requerido`);
                            isValid = false;
                        }
                    });
                    break;
            }

            return isValid;
        }

        function validateEmail(email) {
            const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return re.test(email.toLowerCase());
        }

        function setupInputValidation() {
            const inputs = document.querySelectorAll('input, select, textarea');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    const formGroup = this.closest('.form-group');
                    if (formGroup) {
                        formGroup.classList.remove('error');
                        const errorDiv = formGroup.querySelector('.error-message');
                        if (errorDiv) errorDiv.style.display = 'none';
                    }
                });
            });
        }

        function showFieldError(fieldId, message) {
            const field = document.getElementById(fieldId);
            if (!field) return;

            const formGroup = field.closest('.form-group');
            if (!formGroup) return;

            const errorDiv = formGroup.querySelector('.error-message');
            if (errorDiv) {
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
            }

            formGroup.classList.add('error');
        }

        function showSuccessMessage(message) {
            const successDiv = document.getElementById('successMessage');
            if (successDiv) {
                successDiv.textContent = message;
                successDiv.style.display = 'block';
                successDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        function showError(message) {
            const errorDiv = document.getElementById('mainError');
            if (errorDiv) {
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
                errorDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        function clearErrors() {
            document.querySelectorAll('.error-message').forEach(div => {
                div.style.display = 'none';
            });
            document.querySelectorAll('.form-group').forEach(group => {
                group.classList.remove('error');
            });
            const mainError = document.getElementById('mainError');
            if (mainError) {
                mainError.style.display = 'none';
            }
        }
    </script>
</body>
</html>